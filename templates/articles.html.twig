{% extends 'base.html.twig' %}

{% block title %}Home - Exo01{% endblock %}

{% block body %}
<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-wrap m-4">
{% for article in articles %}
      <div class="p-4 md:w-1/3" id="{{article.id}}">
        <div class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden">
          <img class="lg:h-48 md:h-36 w-full object-cover object-center" src="https://picsum.photos/750/400?random={{article.id}}" alt="blog">
          <div class="p-6">
            <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1">{{article.categories[0].name}},{{article.categories[1].name}},{{article.categories[2].name}}</h2>
            <h1 class="title-font text-lg font-medium text-gray-900 mb-3">{{article.title}}</h1>
            <p class="leading-relaxed mb-3">{{article.content}}</p>
            <div class="flex items-center flex-wrap ">
              <a href="/articles/id" class="text-indigo-500 inline-flex items-center md:mb-2 lg:mb-0">Learn More
                <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M5 12h14"></path>
                  <path d="M12 5l7 7-7 7"></path>
                </svg>
              </a>
              <span class="text-gray-400 mr-3 inline-flex items-center lg:ml-auto md:ml-0 ml-auto leading-none text-sm pr-3 py-1 border-r-2 border-gray-200">
                {{article.author.firstname}} {{article.author.lastname}}
              </span>
              <span class="text-gray-400 mr-3 inline-flex items-center lg:ml-auto md:ml-0 ml-auto leading-none text-sm pr-3 py-1 border-r-2 border-gray-200">
                {{article.createAt|date("Y/m/d")}}
              </span>
            </div>
          </div>
        </div>
      </div>
{% endfor %}
    </div>
  </div>
</section>
{% endblock %}